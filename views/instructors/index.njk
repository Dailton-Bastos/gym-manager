{% extends 'layout.njk' %}

  {% block head %}
    <title>Instructors</title>
  {% endblock head %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento(s)</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
      {% for instructor in instructors %}
        <tr>
          <td>
            <span style="background-image: url({{ instructor.avatar_url }})">
            </span>
            {{ instructor.name }}
          </td>
          <td>{{ instructor.services }}</td>
          <td><a href="/instructors/{{ instructor.id }}">ver</a></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}
